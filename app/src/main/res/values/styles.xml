<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBarStatusBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.Design.BottomNavigationView" parent="">
        <item name="elevation">18.0dip</item>
        <item name="itemBackground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="text_title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:lineSpacingExtra">4.0dip</item>
    </style>
    <style name="text_title.lists" parent="@style/text_title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="text_subtitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4.0dip</item>
    </style>
    <style name="text_subtitle.list" parent="@style/text_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/list_horizontal_margin</item>
    </style>


    <style name="text_label" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="white_toolbar">
        <item name="android:theme">@style/AppTheme.NoActionBar</item>
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>


    <style name="rootContainer">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/colorWindowBackground</item>
    </style>
    <style name="rootContainer.white_background" parent="@style/rootContainer">
        <item name="android:background">@android:color/background_light</item>
    </style>
    <style name="text_content" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8.0sp</item>
    </style>

    <style name="text_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="rootContainerList">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/list_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/list_vertical_margin</item>
        <item name="android:paddingRight">@dimen/list_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/list_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/list_vertical_margin</item>
    </style>
    <style name="divider">
        <item name="android:background">?android:listDivider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>


    <style name="text_label_thin" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14.0sp</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_label_thin.input" parent="@style/text_label_thin">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="ToolbarSubtitleApp" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12.0sp</item>
    </style>
    <style name="container_count">
        <item name="android:gravity">start</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">@dimen/list_vertical_margin</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#FF4081</item>  // you can change the color of the yearPiker dialog
        <item name="android:textColorPrimary">#FF4081</item> // you can change the color of the yearPiker dialog
    </style>

    <style name="AppTheme.ButtonRaised" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimary" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimaryClose" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorTextThird</item>
        <item name="colorControlHighlight">@null</item>
        <item name="colorButtonNormal">@null</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
