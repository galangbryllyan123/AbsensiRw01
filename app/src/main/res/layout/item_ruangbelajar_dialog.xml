<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/background_light"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_above="@+id/addView"
            style="@style/divider" />

        <LinearLayout
            android:id="@+id/main_row"
            android:orientation="horizontal"
            android:layout_marginBottom="0.0dip"
            style="@style/rootContainerList">

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/imageView1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/fa_home_solid"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                app:solid_icon="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PENGOLOLAN SAMPAH  WARGA RW 01"
                    android:textSize="16dp"
                    android:textColor="@color/colorTextThird"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/tv1"
                    android:layout_marginBottom="4.0dip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
                <TextView
                    android:text="RW 01"
                    android:id="@+id/tv2"
                    android:layout_marginRight="4dp"
                    android:layout_below="@+id/tv1"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4.0dip"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextThird"
                    android:background="@drawable/circletext"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/main_row"
            style="@style/divider" />
    </LinearLayout>
</RelativeLayout>