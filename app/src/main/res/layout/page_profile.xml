<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingRight="10dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:fontFamily="sans-serif-light"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengaturan"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:background="@color/colorWindowBackground"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editKeyFoto"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/circle200"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/foto"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:civ_border_color="#fff"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@null"
                            android:src="@drawable/family_avatar" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp">

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/edit"
                            android:padding="4dp"
                            android:background="@drawable/shape_white_circle"
                            app:srcCompat="@drawable/ic_edit_black_24dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="40dp"/>
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:text="Harap lengkapi data berikut"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_margin="40dp"
                    android:layout_width="124dp"
                    android:layout_height="124dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        app:srcCompat="@drawable/circle"
                        android:layout_width="124dp"
                        android:layout_height="124dp"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:background="@drawable/circle"
                        app:srcCompat="@drawable/ic_baseline_create_24"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:enabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    app:startIconDrawable="@drawable/ic_baseline_mail_outline_24"
                    android:hint="Email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    app:startIconDrawable="@drawable/ic_baseline_person_outline_24"
                    app:endIconMode="clear_text"
                    android:hint="Full Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NONE"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    app:startIconDrawable="@drawable/ic_baseline_home_24"
                    app:endIconMode="clear_text"
                    android:hint="WARGA RW 01">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editAsalSekolah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UNTITLED"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:hint="Shift"
                    app:startIconDrawable="@drawable/ic_baseline_short_text_24">

                    <AutoCompleteTextView
                        android:id="@+id/editSemester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/actReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAlfa"
                        android:text="RESET DATA" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/actSimpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="SIMPAN" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
