<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_close"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ic_baseline_close_24"
        app:backgroundTint="@color/colorAlfa"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/action_a"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="top|center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/action_a_icon"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="24dp" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amat\nBaik"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_b"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="top|center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/action_b_icon"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textSize="24dp" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baik"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_c"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="top|center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/action_c_icon"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="24dp" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cukup\nBaik"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_d"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="top|center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/action_d_icon"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textSize="24dp" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cukup"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_e"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="top|center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/action_e_icon"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textSize="24dp" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak\nCukup Baik"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>