<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/lyCard"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWindowBackgroundWhite">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/imageView1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8.0dip"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="@string/fa_home_solid"
                android:background="@drawable/circle"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                app:solid_icon="true" />

            <RelativeLayout
                android:layout_toRightOf="@+id/imageView1"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PENGOLOLAN SAMPAH  WARGA RW 01"
                    android:textSize="16dp"
                    android:textColor="@color/colorTextThird"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/tv1"
                    android:layout_marginBottom="4.0dip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
                <TextView
                    android:text="RW 01"
                    android:id="@+id/tv2"
                    android:layout_below="@+id/tv1"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4.0dip"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextThird"
                    android:background="@drawable/circletext"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:text="0 Anak"
                    android:layout_toRightOf="@+id/tv2"
                    android:id="@+id/tv3"
                    android:layout_marginLeft="4dp"
                    android:layout_below="@+id/tv1"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4.0dip"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextThird"
                    android:background="@drawable/circletext"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:background="@color/colorTextThird"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/action_edit"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_create_24"
                android:tint="#DADADA"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/action_del"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_delete_forever_24"
                android:tint="#DADADA"
                android:adjustViewBounds="true"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>