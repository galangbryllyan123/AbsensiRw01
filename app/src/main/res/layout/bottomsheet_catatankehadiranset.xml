<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_close"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ic_baseline_close_24"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <info.androidhive.fontawesome.FontTextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_times_circle_solid"
                    android:textColor="@color/colorAlfa"
                    android:textSize="30dp"
                    app:solid_icon="true" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alfa"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <info.androidhive.fontawesome.FontTextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_envelope"
                    android:textColor="@color/colorIzin"
                    android:textSize="30dp"
                    app:solid_icon="true" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Izin"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <info.androidhive.fontawesome.FontTextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_plus_square_solid"
                    android:textColor="@color/colorSakit"
                    android:textSize="30dp"
                    app:solid_icon="true" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sakit"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <info.androidhive.fontawesome.FontTextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_bicycle_solid"
                    android:textColor="@color/colorTerlambat"
                    android:textSize="30dp"
                    app:solid_icon="true" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="11dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terlambat"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>