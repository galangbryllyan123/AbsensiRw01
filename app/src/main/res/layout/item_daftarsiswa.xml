<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lyCard"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWindowBackgroundWhite">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/layoutAvatar"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle"
                        android:layout_width="64dp"
                        android:layout_height="64dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/foto"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:civ_border_color="#fff"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@null"
                            android:src="@drawable/family_avatar" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/sex"
                            android:padding="4dp"
                            android:background="@drawable/shape_white_circle"
                            app:srcCompat="@drawable/ic_male"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/layoutAvatar"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Edi Candra Wijaya"
                        android:textSize="16dp"
                        android:textColor="@color/colorTextThird"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/tv1"
                        android:layout_marginBottom="4.0dip"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />
                    <TextView
                        android:text="01010101"
                        android:id="@+id/tv2"
                        android:layout_below="@+id/tv1"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="4.0dip"
                        android:textSize="14dp"
                        android:textColor="@color/colorTextThird"
                        android:background="@drawable/circletext"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:background="@color/colorTextThird"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/action_edit"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_baseline_create_24"
                    android:tint="#DADADA"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:id="@+id/action_del"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_baseline_delete_forever_24"
                    android:tint="#DADADA"
                    android:adjustViewBounds="true"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>